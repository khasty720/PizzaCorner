<%= form_for(@product_price) do |f| %>
  <% if @product_price.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product_price.errors.count, "error") %> prohibited this product_price from being saved:</h2>

      <ul>
      <% @product_price.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :price %><br>
    <%= f.number_field :price, :value => 0.00, :step => 'any' %>
  </div>
  <div class="form-group">
    <%= f.label :user_id %>
    <%= f.collection_select :user_id, User.order('company ASC').all, :id, :company, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :product_id %>
    <%= f.collection_select :product_id, Product.order('name ASC').all, :id, :name, class: 'form-control' %>
  </div>
  <div class="actions">
    <%= f.submit :class => "btn btn-default", 'data-disable-with' => "Please wait.."  %>
  </div>
<% end %>
