

<p>
  <strong>Name:</strong>
  <%= @product.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @product.description %>
</p>
<p>
  <strong>Group:</strong>
  <%= @product.group.name %>
</p>
<p>
  <% if @product.image_file_name.present? %>
  <%= image_tag @product.image.url, :size => :med  %>
  <% end %>
</p>
<p>
  <%# if user_signed_in? %>
    <%# if @product_price.first.price.present? %>
      <%#= number_to_currency(@product_price.first.price) %>
    <%# else %>
    <strong>Default Price:</strong>
      <%= number_to_currency(@product.default_price) %>
    <%# end %>
  <%# else %>

  <%# end %>
</p>
<p>
  <strong>Inventory Count:</strong>
  <%= @product.count %>
</p>

<%= link_to 'Edit', edit_product_path(@product) %>
<%= link_to 'Back', products_path %>
