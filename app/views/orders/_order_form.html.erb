<div class="row">
<div class="col-md-12">

<div class="form">
  <%= form_for(@order, :html => { :role => 'form', :class => 'payment-form'}) do |f| %>
  <% if @order.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@order.errors.count, "error") %> prohibited this group from being saved:</h2>

    <ul>
      <% @order.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<div class="col-md-5">
    <fieldset>
      <h4 class="text-left">Pickup / Delivery</h4>
      <div class="form-group">
        <%= f.radio_button(:delivery, false) %>
        <%= f.label :delivery, "Pickup" %>
        <%= f.radio_button(:delivery, true) %>
        <%= f.label :delivery, "Delivery" %>
      </div>
    <h4 class="text-left">Delivery Address</h4>
    <%= render 'addr_form', :f => f %>
  </fieldset>
</div>

  <div class="col-md-5">
    <fieldset>
    <%= render 'payment_form', :f => f %>
    </fieldset>
  </div>

  </div>
 </div>
</div>

<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
    <div class="actions">
      <%= f.submit "Submit Order", :class => "btn btn-default", 'data-disable-with' => "Please wait.." %>
      <% end %>
    </div>
  </div>
  <div class="col-md-4">
    <%= link_to 'Cancel Order', @order, method: :delete, data: { confirm: 'Are you sure?' },
    :class => "btn btn-default"  %>
  </div>


</div>
