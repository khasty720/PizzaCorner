<div>
<h1>Listing Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Order Number</th>
      <th>Total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.total %></td>
      <td><%= link_to 'Show', show_order_status_path(order), :class => "btn btn-default"  %></td>
      <% if is_admin %>
      <td><%= link_to 'Edit', edit_order_path(order), :class => "btn btn-default"  %></td>
      <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-default"  %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%#= link_to 'New Order', new_order_path, :class => "btn btn-default"  %>
</div>
