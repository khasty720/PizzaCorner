
<div class="checkout">
  <div class="row">
    <div class="column">
      <table class="table table-striped">
        <thead>
          <tr>

            <th><%= @category.name%> Type</th>
            <th>Description</th>

            <th colspan="3"></th>

          </tr>
        </thead>
        <tbody>
          <% @category.groups.each do |group| %>
          <tr>
            <%= render 'groups/group', :group => group %>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
